{
    "name": "drupalcz/site",
    "description": "Drupal.cz Community website. (Drupal8 site built with BLT.)",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Czech Drupal Association z. s.",
            "role": "NGO overseeing the project"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "acquia/blt": "^11",
        "acquia/memcache-settings": "*",
        "bower-asset/dropzone": "^5.1",
        "bower-asset/flexslider": "^2.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/acquia_connector": "^1.5",
        "drupal/acquia_purge": "^1.0",
        "drupal/admin_toolbar": "~2.0",
        "drupal/better_normalizers": "^1.0@beta",
        "drupal/captcha": "^1.0@beta",
        "drupal/coder": "8.3.8",
        "drupal/config_split": "^1.5",
        "drupal/config_update": "^1.5",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/ctools": "^3.0",
        "drupal/default_content_deploy": "dev-1.x",
        "drupal/devel": "dev-3.x",
        "drupal/diff": "^1.0@RC",
        "drupal/dropzonejs": "^2.0",
        "drupal/embed": "^1.0",
        "drupal/entity_browser": "^2.0",
        "drupal/entity_class_formatter": "^1.0",
        "drupal/entity_embed": "^1.0",
        "drupal/eu_cookie_compliance": "^1.0",
        "drupal/extlink": "^1.1",
        "drupal/flexslider": "dev-2.x",
        "drupal/geolocation": "dev-3.x",
        "drupal/geshifilter": "dev-1.x",
        "drupal/google_analytics": "^2.5",
        "drupal/honeypot": "^2.0",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/juicebox": "dev-2.x",
        "drupal/libraries": "dev-3.x",
        "drupal/media_entity_actions": "^1.0@alpha",
        "drupal/metatag": "^1.10",
        "drupal/panelizer": "^4.1",
        "drupal/panels": "^4.3",
        "drupal/panels_ipe": "^4.3",
        "drupal/paragraphs": "^1.5",
        "drupal/pathauto": "^1.6.0",
        "drupal/purge": "^3.0@beta",
        "drupal/redirect": "^1.0",
        "drupal/riddler": "dev-1.x",
        "drupal/seckit": "^1.1",
        "drupal/security_review": "1.x-dev",
        "drupal/shield": "^1.2",
        "drupal/slack_invite": "dev-1.x",
        "drupal/stage_file_proxy": "^1.0@RC",
        "drupal/token": "^1.5",
        "drupal/upgrade_rector": "^1.0@alpha",
        "drupal/upgrade_status": "^2.6",
        "drupal/viewsreference": "^2.0",
        "drupal/youtube": "^1.0@beta",
        "drush/drush": "^10.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "pear/versioncontrol_git": "^0.5.0"
    },
    "replace": {
        "bower-asset/jquery": "*",
        "bower-asset/jqueryui": "*",
        "bower-asset/backbone": "*",
        "bower-asset/underscore": "*",
        "npm-asset/jquery": "*",
        "npm-asset/jqueryui": "*",
        "npm-asset/backbone": "*",
        "npm-asset/underscore": "*"
    },
    "require-dev": {
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/sites/default/default.services.yml": false,
                "[web-root]/sites/default/default.settings.php": false
            }
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2",
            "drupal/youtube": "-p5"
        },
        "patches": {
            "drupal/captcha": {
                "D9 compatibility": "https://www.drupal.org/files/issues/2020-04-28/3102288-40.patch"
            },
            "drupal/flexslider": {
                "D9 compatibility": "./patches/contrib/flexslider/upgrade.patch"
            },
            "drupal/youtube": {
                "D9 compatibility": "./patches/contrib/youtube/upgrade.patch"
            },
            "drupal/default_content_deploy": {
                "D9 compatibility": "./patches/contrib/default_content_deploy/upgrade.patch"
            },
            "drupal/geshifilter": {
                "D9 compatibility": "./patches/contrib/geshifilter/upgrade.patch"
            },
            "drupal/google_analytics": {
                "D9 compatibility": "https://www.drupal.org/files/issues/2020-04-20/3072207-47.patch"
            },
            "drupal/juicebox": {
                "D9 compatibility": "https://www.drupal.org/files/issues/2020-04-15/updated-3042821-5.patch"
            },
            "drupal/libraries": {
                "D9 compatibility": "https://www.drupal.org/files/issues/2020-04-06/3119010-7.patch"
            },
            "drupal/riddler": {
                "D9 compatibility": "https://www.drupal.org/files/issues/2019-10-31/riddler-drupal9.diff"
            },
            "drupal/slack_invite": {
                "D9 compatibility": "./patches/contrib/slack_invite/upgrade.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "composer-exit-on-patch-failure": true
    },
    "autoload": {
        "psr-4": {
            "Example\\": "blt/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "blt internal:create-project:init-repo"
        ],
        "nuke": [
            "rm -rf vendor composer.lock docroot/core docroot/modules/contrib docroot/profiles/contrib docroot/themes/contrib",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ],
        "init-theme": "sh scripts/init-theme.sh"
    }
}
