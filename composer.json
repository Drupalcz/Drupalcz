{
    "name": "drupalcz/site",
    "description": "Drupal.cz Community website. (Drupal8 site built with BLT.)",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Czech Drupal Association z. s.",
            "role": "NGO overseeing the project"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "acquia/blt": "^10.0.0",
        "bower-asset/dropzone": "^5.1",
        "bower-asset/flexslider": "^2.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/acquia_connector": "^1.5",
        "drupal/acquia_purge": "^1.0",
        "drupal/admin_toolbar": "^1.21",
        "drupal/better_normalizers": "^1.0@beta",
        "drupal/cleantalk": "^2.5",
        "drupal/config_split": "^1.4",
        "drupal/config_update": "^1.5",
        "drupal/console": "^1.3",
        "drupal/core": "^8.7.7",
        "drupal/ctools": "^3.0",
        "drupal/devel": "^2.1",
        "drupal/diff": "^1.0@RC",
        "drupal/dropzonejs": "^2.0",
        "drupal/embed": "^1.0",
        "drupal/entity_browser": "^2.0",
        "drupal/entity_class_formatter": "^1.0",
        "drupal/entity_embed": "^1.0",
        "drupal/eu_cookie_compliance": "^1.0",
        "drupal/extlink": "^1.1",
        "drupal/flexslider": "^2.0",
        "drupal/geolocation": "^1.11",
        "drupal/geshifilter": "^1.2",
        "drupal/google_analytics": "^2.4",
        "drupal/honeypot": "^1.27",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/juicebox": "^2.0@beta",
        "drupal/libraries": "^3.0@alpha",
        "drupal/media_entity_actions": "^1.0@alpha",
        "drupal/memcache": "2.0-alpha7",
        "drupal/metatag": "^1.10",
        "drupal/panelizer": "^4.1",
        "drupal/panels": "^4.3",
        "drupal/panels_ipe": "^4.3",
        "drupal/paragraphs": "^1.5",
        "drupal/pathauto": "^1.3",
        "drupal/purge": "^3.0@beta",
        "drupal/redirect": "^1.0",
        "drupal/seckit": "^1.1",
        "drupal/security_review": "1.x-dev",
        "drupal/shield": "^1.2",
        "drupal/slack_invite": "^1.1",
        "drupal/stage_file_proxy": "^1.0@RC",
        "drupal/token": "^1.5",
        "drupal/viewsreference": "^2.0",
        "drupal/youtube": "^1.0@beta",
        "drush/drush": "^9.5",
        "oomphinc/composer-installers-extender": "^1.1",
        "pear/versioncontrol_git": "^0.5.0"
    },
    "replace": {
        "bower-asset/jquery": "*",
        "bower-asset/jqueryui": "*",
        "bower-asset/backbone": "*",
        "bower-asset/underscore": "*",
        "npm-asset/jquery": "*",
        "npm-asset/jqueryui": "*",
        "npm-asset/backbone": "*",
        "npm-asset/underscore": "*"
    },
    "require-dev": {
        "acquia/blt-require-dev": "^10.0.0-alpha1"
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0,
        "optimize-autoloader": true,
        "apcu-autoloader": true
    },
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "1": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "extra": {
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drush/drush": {
                "github.com/drush-ops/drush/issues/3572": "https://github.com/drush-ops/drush/files/2534033/drush-ops_drush-3572.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Example\\": "blt/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "blt internal:create-project:init-repo"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "nuke": [
            "rm -rf vendor composer.lock docroot/core docroot/modules/contrib docroot/profiles/contrib docroot/themes/contrib",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ]
    }
}
